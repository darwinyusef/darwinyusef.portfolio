      const events: Event[] = await response.json();
      allEvents = events.filter(event => event.is_active);

      // Render featured events
      const featuredEvents = allEvents.filter(event => event.featured);
      if (featuredContainer && featuredEvents.length > 0) {
        featuredContainer.innerHTML = featuredEvents.map(event => `
          <article class="bg-gradient-to-br from-[#1a1a2e] to-[#16213e] rounded-2xl overflow-hidden hover:shadow-purple-500/30 transition-all duration-500 hover:-translate-y-2 border-2 border-purple-900/50 relative group">
            <div class="absolute top-4 left-4 z-10">
              <div class="flex items-center gap-2 bg-gradient-to-r from-red-600 to-pink-600 px-4 py-2 rounded-full shadow-lg font-bold text-sm text-white">
                <span class="material-symbols-outlined text-base animate-pulse">fiber_new</span>
