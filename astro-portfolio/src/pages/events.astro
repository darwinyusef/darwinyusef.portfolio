      // Setup filters after events are loaded
      setupFilters();

    } catch (error) {
      console.error('Error loading events:', error);
      if (featuredContainer) {
        featuredContainer.innerHTML = `
          <div class="col-span-full text-center py-8">
            <p class="text-red-400">${lang === 'es' ? 'Error al cargar eventos destacados' : lang === 'en' ? 'Error loading featured events' : 'Erro ao carregar eventos destacados'}</p>
          </div>
        `;
      }
      if (eventsContainer) {
        eventsContainer.innerHTML = `
          <div class="col-span-full text-center py-8">
            <p class="text-red-400">${lang === 'es' ? 'Error al cargar eventos' : lang === 'en' ? 'Error loading events' : 'Erro ao carregar eventos'}</p>
          </div>
        `;
      }
    }
  }

  function setupFilters() {
    const filterButtons = document.querySelectorAll('.region-filter');
    const noResults = document.getElementById('no-results');

    // Set default active filter to "all"
    const allButton = document.querySelector('[data-region="all"]');
    if (allButton) {
      allButton.classList.add('active');
    }

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const selectedRegion = button.getAttribute('data-region');
        const eventItems = document.querySelectorAll('.event-item');

        // Update active button
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // Filter events
        let visibleCount = 0;

        eventItems.forEach((item, index) => {
          const itemRegion = item.getAttribute('data-region');

          if (selectedRegion === 'all' || itemRegion === selectedRegion) {
            item.classList.remove('hidden');
            // Stagger animation
            setTimeout(() => {
              (item as HTMLElement).style.opacity = '1';
              (item as HTMLElement).style.transform = 'translateY(0)';
            }, index * 50);
            visibleCount++;
          } else {
            item.classList.add('hidden');
          }
        });

        // Show/hide no results message
        if (visibleCount === 0) {
          noResults?.classList.remove('hidden');
        } else {
          noResults?.classList.add('hidden');
        }
      });
    });
  }

  // Filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    initParallax();
    loadEvents();
    // Carousel controls
    const nextBtn = document.getElementById('carousel-next');
    const prevBtn = document.getElementById('carousel-prev');
    const indicators = document.querySelectorAll('.carousel-indicator');

    nextBtn?.addEventListener('click', nextSlide);
    prevBtn?.addEventListener('click', prevSlide);

    indicators.forEach((indicator) => {
      indicator.addEventListener('click', () => {
        const index = parseInt(indicator.getAttribute('data-index') || '0');
        goToSlide(index);
      });
    });

    // Auto-play carousel
    let autoplayInterval = setInterval(nextSlide, 5000);

    // Pause on hover
    const carouselContainer = document.getElementById('carousel-track');
    carouselContainer?.addEventListener('mouseenter', () => {
      clearInterval(autoplayInterval);
    });

    carouselContainer?.addEventListener('mouseleave', () => {
      autoplayInterval = setInterval(nextSlide, 5000);
    });

    // Handle window resize
    window.addEventListener('resize', () => {
      const wasMobile = isMobile;
      const nowMobile = window.innerWidth < 768;
      if (wasMobile !== nowMobile) {
        location.reload(); // Simple reload on breakpoint change
      }
    });

    // Newsletter form handling
    const newsletterForm = document.getElementById('newsletter-form') as HTMLFormElement;
    const newsletterStatus = document.getElementById('newsletter-status') as HTMLDivElement;
    const newsletterSubmit = document.getElementById('newsletter-submit') as HTMLButtonElement;
    const lang = document.documentElement.lang || 'es';

    if (newsletterForm) {
      newsletterForm.addEventListener('submit', async (e) => {
        e.preventDefault();

        const emailInput = document.getElementById('newsletter-email') as HTMLInputElement;
        const email = emailInput.value.trim();

        if (!email) return;

        // Disable button and show loading
        const originalButtonText = newsletterSubmit.innerHTML;
        newsletterSubmit.disabled = true;
        newsletterSubmit.innerHTML = `
          <span class="flex items-center gap-2 justify-center">
            <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>${lang === 'es' ? 'Suscribiendo...' : lang === 'en' ? 'Subscribing...' : 'Inscrevendo...'}</span>
          </span>
        `;

        try {
          const response = await fetch('/api/send-email', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              name: 'Suscriptor Newsletter',
              email: email,
              message: `Nueva suscripci√≥n al newsletter de eventos desde la p√°gina de eventos.`,
            }),
          });

          const result = await response.json();

          if (result.success) {
            // Show success message
            newsletterStatus.className = 'mt-6 p-4 rounded-xl text-center bg-green-900/20 border-2 border-green-500 text-green-400';
            newsletterStatus.innerHTML = `
              <div class="flex items-center justify-center gap-2">
                <span class="material-symbols-outlined">check_circle</span>
                <span class="font-semibold">
                  ${lang === 'es' ? '¬°Suscripci√≥n exitosa! Recibir√°s notificaciones sobre nuevos eventos.' : lang === 'en' ? 'Successfully subscribed! You will receive notifications about new events.' : 'Inscri√ß√£o bem-sucedida! Voc√™ receber√° notifica√ß√µes sobre novos eventos.'}
                </span>
              </div>
            `;
            newsletterStatus.classList.remove('hidden');

            // Clear form
            emailInput.value = '';

            // Hide message after 5 seconds
            setTimeout(() => {
              newsletterStatus.classList.add('hidden');
            }, 5000);
          } else {
            throw new Error(result.error || 'Error al suscribirse');
          }
        } catch (error) {
          // Show error message
          newsletterStatus.className = 'mt-6 p-4 rounded-xl text-center bg-red-900/20 border-2 border-red-500 text-red-400';
          newsletterStatus.innerHTML = `
            <div class="flex items-center justify-center gap-2">
              <span class="material-symbols-outlined">error</span>
              <span class="font-semibold">
                ${lang === 'es' ? 'Error al suscribirse. Por favor, intenta nuevamente.' : lang === 'en' ? 'Error subscribing. Please try again.' : 'Erro ao inscrever. Por favor, tente novamente.'}
              </span>
            </div>
          `;
          newsletterStatus.classList.remove('hidden');

          console.error('Newsletter subscription error:', error);

          // Hide message after 5 seconds
          setTimeout(() => {
            newsletterStatus.classList.add('hidden');
          }, 5000);
        } finally {
          // Restore button
          newsletterSubmit.disabled = false;
          newsletterSubmit.innerHTML = originalButtonText;
        }
      });
    }
  });
</script>
