<script>
  // Carousel functionality
  let currentSlide = 0;
  const isMobile = window.innerWidth < 768;
  const slidesToShow = isMobile ? 1 : 2;
  const totalSlides = 4;
  const maxSlide = Math.ceil(totalSlides / slidesToShow) - 1;

  function updateCarousel() {
    const track = document.getElementById('carousel-track');
    const indicators = document.querySelectorAll('.carousel-indicator');

    if (track) {
      const slideWidth = 100 / slidesToShow;
      const translateX = -(currentSlide * slideWidth);
      track.style.transform = `translateX(${translateX}%)`;
    }

    // Update indicators
    indicators.forEach((indicator, index) => {
      if (index === currentSlide) {
        indicator.classList.remove('bg-gray-600');
        indicator.classList.add('bg-primary', 'scale-125');
      } else {
        indicator.classList.remove('bg-primary', 'scale-125');
        indicator.classList.add('bg-gray-600');
      }
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) > maxSlide ? 0 : currentSlide + 1;
    updateCarousel();
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1) < 0 ? maxSlide : currentSlide - 1;
    updateCarousel();
  }

  function goToSlide(index: number) {
    currentSlide = Math.min(index, maxSlide);
    updateCarousel();
  }

  // Parallax functionality
  function initParallax() {
    const parallaxElements = document.querySelectorAll('[data-speed]');

    if (parallaxElements.length > 0) {
      let ticking = false;

      function updateParallax() {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const windowHeight = window.innerHeight;

        parallaxElements.forEach((element) => {
          const speed = parseFloat(element.getAttribute('data-speed') || '0.5');
          const elementTop = element.getBoundingClientRect().top + scrollTop;
          const elementHeight = element.offsetHeight;

          if (scrollTop + windowHeight > elementTop && scrollTop < elementTop + elementHeight) {
            const yPos = (scrollTop - elementTop) * speed;
            element.style.transform = `translate3d(0, ${yPos}px, 0)`;
          }
        });

        ticking = false;
      }

      function requestTick() {
        if (!ticking) {
          requestAnimationFrame(updateParallax);
          ticking = true;
        }
      }

      window.addEventListener('scroll', requestTick, { passive: true });
      updateParallax(); // Initial call
    }
  }

  // Load events from GitHub
  interface Event {
    id: number;
    city: string;
    date: string;
    country: string;
    title: string;
    venue: string;
    ticketUrl: string;
    region: string;
    featured: boolean;
    is_active: boolean;
