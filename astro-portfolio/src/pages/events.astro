<script>
  // Carousel functionality
  let currentSlide = 0;
  const isMobile = window.innerWidth < 768;
  const slidesToShow = isMobile ? 1 : 2;
  const totalSlides = 4;
  const maxSlide = Math.ceil(totalSlides / slidesToShow) - 1;

  function updateCarousel() {
    const track = document.getElementById('carousel-track');
    const indicators = document.querySelectorAll('.carousel-indicator');

    if (track) {
      const slideWidth = 100 / slidesToShow;
      const translateX = -(currentSlide * slideWidth);
      track.style.transform = `translateX(${translateX}%)`;
    }

    // Update indicators
    indicators.forEach((indicator, index) => {
      if (index === currentSlide) {
        indicator.classList.remove('bg-gray-300', 'dark:bg-gray-600');
        indicator.classList.add('bg-primary', 'scale-125');
      } else {
        indicator.classList.remove('bg-primary', 'scale-125');
        indicator.classList.add('bg-gray-300', 'dark:bg-gray-600');
      }
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) > maxSlide ? 0 : currentSlide + 1;
    updateCarousel();
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1) < 0 ? maxSlide : currentSlide - 1;
    updateCarousel();
  }

  function goToSlide(index: number) {
    currentSlide = Math.min(index, maxSlide);
    updateCarousel();
  }

  // Parallax functionality
  function initParallax() {
    const parallaxElements = document.querySelectorAll('[data-speed]');

    if (parallaxElements.length > 0) {
      let ticking = false;

      function updateParallax() {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const windowHeight = window.innerHeight;

        parallaxElements.forEach((element) => {
          const speed = parseFloat(element.getAttribute('data-speed') || '0.5');
          const elementTop = element.getBoundingClientRect().top + scrollTop;
          const elementHeight = element.offsetHeight;

          if (scrollTop + windowHeight > elementTop && scrollTop < elementTop + elementHeight) {
            const yPos = (scrollTop - elementTop) * speed;
            element.style.transform = `translate3d(0, ${yPos}px, 0)`;
          }
        });

        ticking = false;
      }

      function requestTick() {
        if (!ticking) {
          requestAnimationFrame(updateParallax);
          ticking = true;
        }
      }

      window.addEventListener('scroll', requestTick, { passive: true });
      updateParallax(); // Initial call
    }
  }

  // Filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    initParallax();
    // Carousel controls
    const nextBtn = document.getElementById('carousel-next');
    const prevBtn = document.getElementById('carousel-prev');
    const indicators = document.querySelectorAll('.carousel-indicator');

    nextBtn?.addEventListener('click', nextSlide);
    prevBtn?.addEventListener('click', prevSlide);

    indicators.forEach((indicator) => {
      indicator.addEventListener('click', () => {
        const index = parseInt(indicator.getAttribute('data-index') || '0');
        goToSlide(index);
      });
    });

    // Auto-play carousel
    let autoplayInterval = setInterval(nextSlide, 5000);

    // Pause on hover
    const carouselContainer = document.getElementById('carousel-track');
    carouselContainer?.addEventListener('mouseenter', () => {
      clearInterval(autoplayInterval);
    });

    carouselContainer?.addEventListener('mouseleave', () => {
      autoplayInterval = setInterval(nextSlide, 5000);
    });

    // Handle window resize
    window.addEventListener('resize', () => {
      const wasMobile = isMobile;
      const nowMobile = window.innerWidth < 768;
      if (wasMobile !== nowMobile) {
        location.reload(); // Simple reload on breakpoint change
      }
    });

    const filterButtons = document.querySelectorAll('.region-filter');
    const eventItems = document.querySelectorAll('.event-item');
    const noResults = document.getElementById('no-results');

    // Set default active filter to "all"
    const allButton = document.querySelector('[data-region="all"]');
    if (allButton) {
      allButton.classList.add('active');
    }

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const selectedRegion = button.dataset.region;

        // Update active button
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // Filter events
        let visibleCount = 0;

        eventItems.forEach((item, index) => {
          const itemRegion = item.dataset.region;

          if (selectedRegion === 'all' || itemRegion === selectedRegion) {
            item.classList.remove('hidden');
            // Stagger animation
            setTimeout(() => {
              item.style.opacity = '1';
              item.style.transform = 'translateY(0)';
            }, index * 50);
            visibleCount++;
          } else {
            item.classList.add('hidden');
          }
        });

        // Show/hide no results message
        if (visibleCount === 0) {
          noResults?.classList.remove('hidden');
        } else {
          noResults?.classList.add('hidden');
        }
      });
    });
  });
</script>
