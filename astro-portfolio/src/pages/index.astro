---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Chatbot from '../components/Chatbot.astro';
import Testimonials from '../components/Testimonials.astro';
import UpcomingEvents from '../components/UpcomingEvents.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('home.title')}>
  <div class="min-h-screen">
    <Header />

    <main class="px-4 py-8 max-w-4xl mx-auto">
      <section class="flex flex-col items-center text-center gap-8">
        <div class="w-40 h-40 rounded-full bg-gradient-to-br from-primary to-purple-600 flex items-center justify-center text-white text-6xl font-black">
          SS
        </div>

        <div class="flex flex-col gap-4 items-center">
          <h1 class="text-4xl md:text-5xl font-black text-gray-900 dark:text-white tracking-tight">
            {t('home.title')}
          </h1>
          <p class="max-w-md text-base text-gray-600 dark:text-gray-400">
            {t('home.subtitle')}
          </p>
        </div>

        <a
          href="/cv.pdf"
          class="w-full max-w-xs bg-primary text-white font-bold py-3 px-6 rounded-lg text-base hover:opacity-90 transition-opacity flex items-center justify-center gap-2"
        >
          <span class="material-symbols-outlined">download</span>
          {t('home.downloadCV')}
        </a>
      </section>

      <section class="mt-16">
        <div class="border-t border-gray-200 dark:border-gray-700 my-8"></div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
          {t('home.aboutMe')}
        </h2>
        <div class="space-y-4 text-base text-gray-600 dark:text-gray-400" id="about-content">
        </div>
      </section>

      <section class="mt-16">
        <div class="border-t border-gray-200 dark:border-gray-700 my-8"></div>
        <Testimonials />
      </section>

      <section class="mt-16">
        <div class="border-t border-gray-200 dark:border-gray-700 my-8"></div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <UpcomingEvents />
          <div class="bg-gradient-to-br from-primary to-purple-600 rounded-xl shadow-md p-6 text-white flex flex-col justify-center">
            <h3 class="text-2xl font-bold mb-4">
              {lang === 'es' ? '¿Listo para empezar?' : lang === 'en' ? 'Ready to get started?' : 'Pronto para começar?'}
            </h3>
            <p class="mb-6">
              {lang === 'es' ? 'Hablemos sobre tu próximo proyecto' : lang === 'en' ? 'Let\'s talk about your next project' : 'Vamos falar sobre seu próximo projeto'}
            </p>
            <a
              href={`/${lang === 'es' ? '' : lang}/#contact`}
              class="bg-white text-primary font-bold py-2 px-4 rounded-lg hover:bg-gray-100 transition-colors inline-block text-center"
            >
              {lang === 'es' ? 'Contactar Ahora' : lang === 'en' ? 'Contact Now' : 'Entrar em Contato'}
            </a>
          </div>
        </div>
      </section>

      <section class="mt-16" id="contact">
        <div class="border-t border-gray-200 dark:border-gray-700 my-8"></div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 text-center">
          {t('home.contactMe')}
        </h2>

        <div class="flex flex-col items-center gap-6">
          <div class="flex flex-col items-center gap-4 text-center">
            <p class="text-base text-gray-600 dark:text-gray-400">
              {t('home.letConnect')}
            </p>
            <a
              class="text-primary font-medium hover:underline"
              href="mailto:wsgestor@gmail.com"
            >
              wsgestor@gmail.com
            </a>

            <div class="flex gap-4 mt-2">
              <a
                class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-white transition-colors"
                href="#"
                aria-label="LinkedIn"
              >
                <svg class="h-6 w-6" fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                  <rect height="12" width="4" x="2" y="9"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
              </a>
              <a
                class="text-gray-600 dark:text-gray-400 hover:text-primary dark:hover:text-white transition-colors"
                href="#"
                aria-label="GitHub"
              >
                <svg class="h-6 w-6" fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                </svg>
              </a>
            </div>
          </div>

          <form class="w-full max-w-md space-y-4" id="contact-form">
            <div>
              <label class="sr-only" for="name">Name</label>
              <input
                class="w-full bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg p-3 text-base focus:ring-primary focus:border-primary"
                id="name"
                name="name"
                placeholder="Your Name"
                type="text"
                required
              />
            </div>
            <div>
              <label class="sr-only" for="email">{t('contact.email')}</label>
              <input
                class="w-full bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg p-3 text-base focus:ring-primary focus:border-primary"
                id="email"
                name="email"
                placeholder="Your Email"
                type="email"
                required
              />
            </div>
            <div>
              <label class="sr-only" for="message">{t('contact.message')}</label>
              <textarea
                class="w-full bg-gray-100 dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-lg p-3 text-base focus:ring-primary focus:border-primary"
                id="message"
                name="message"
                placeholder="Your Message"
                rows="4"
                required
              ></textarea>
            </div>
            <button
              class="w-full bg-primary text-white font-bold py-3 px-6 rounded-lg text-base hover:opacity-90 transition-opacity"
              type="submit"
            >
              {t('contact.send')}
            </button>
          </form>
        </div>
      </section>
    </main>
  </div>

  <button
    id="chatbot-btn"
    class="fixed bottom-6 right-6 bg-primary text-white p-4 rounded-full shadow-lg hover:opacity-90 transition-opacity z-50"
    aria-label="Open chatbot"
  >
    <span class="material-symbols-outlined text-3xl">chat</span>
  </button>

  <Chatbot />
</Layout>

<script>
  const backendUrl = 'http://localhost:8000';

  async function loadAboutContent() {
    const aboutDiv = document.getElementById('about-content');
    if (!aboutDiv) return;

    aboutDiv.innerHTML = '<p>Cargando...</p>';

    try {
      const response = await fetch(`${backendUrl}/api/v1/indexpage/1`);
      if (response.ok) {
        const data = await response.json();
        aboutDiv.innerHTML = `
          <p>${data.about_text || 'Contenido sobre mí no disponible.'}</p>
        `;
      } else {
        aboutDiv.innerHTML = `
          <p>Soy un ingeniero de software especializado en construir aplicaciones web de alta calidad con enfoque en la experiencia del usuario y el rendimiento. Me apasiona aprender nuevas tecnologías y resolver problemas complejos.</p>
          <p>Tengo experiencia trabajando con diversas tecnologías y he participado en múltiples proyectos. En mi tiempo libre, disfruto contribuir a proyectos de código abierto.</p>
        `;
      }
    } catch (error) {
      aboutDiv.innerHTML = `
        <p>Soy un ingeniero de software especializado en construir aplicaciones web de alta calidad con enfoque en la experiencia del usuario y el rendimiento. Me apasiona aprender nuevas tecnologías y resolver problemas complejos.</p>
        <p>Tengo experiencia trabajando con diversas tecnologías y he participado en múltiples proyectos. En mi tiempo libre, disfruto contribuir a proyectos de código abierto.</p>
      `;
    }
  }

  document.addEventListener('DOMContentLoaded', loadAboutContent);

  const contactForm = document.getElementById('contact-form');
  contactForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target as HTMLFormElement);
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      message: formData.get('message'),
    };

    try {
      const response = await fetch(`${backendUrl}/api/v1/chatbot/contact`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          ...data,
          session_id: crypto.randomUUID()
        }),
      });

      if (response.ok) {
        alert('Mensaje enviado exitosamente');
        (e.target as HTMLFormElement).reset();
      } else {
        alert('Error al enviar el mensaje. Por favor intenta de nuevo.');
      }
    } catch (error) {
      alert('Error de conexión. Por favor intenta de nuevo más tarde.');
    }
  });
</script>
