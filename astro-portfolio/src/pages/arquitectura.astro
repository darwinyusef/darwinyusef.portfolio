<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('advisory-form') as HTMLFormElement;
    const submitBtn = document.getElementById('advisory-submit-btn') as HTMLButtonElement;
    const radioButtons = document.querySelectorAll<HTMLInputElement>('input[name="advisory-type"]');
    const nameInput = document.getElementById('advisory-name') as HTMLInputElement;
    const phoneInput = document.getElementById('advisory-phone') as HTMLInputElement;
    const emailInput = document.getElementById('advisory-email') as HTMLInputElement;
    const descriptionTextarea = document.getElementById('advisory-description') as HTMLTextAreaElement;

    // Detectar el idioma desde la URL
    const path = window.location.pathname;
    const lang = path.includes('/en/') ? 'en' : path.includes('/pt/') ? 'pt' : 'es';

    // Textos seg√∫n el idioma
    const texts = {
      es: {
        disabled: 'Completa todos los campos',
        enabled: 'Enviar solicitud de asesor√≠a',
        sending: 'Enviando...',
        success: '¬°Gracias! Te contactaremos pronto.',
        error: 'Error al enviar. Por favor, intenta de nuevo.'
      },
      en: {
        disabled: 'Complete all fields',
        enabled: 'Send advisory request',
        sending: 'Sending...',
        success: 'Thank you! We will contact you soon.',
        error: 'Error sending. Please try again.'
      },
      pt: {
        disabled: 'Preencha todos os campos',
        enabled: 'Enviar solicita√ß√£o de assessoria',
        sending: 'Enviando...',
        success: 'Obrigado! Entraremos em contato em breve.',
        error: 'Erro ao enviar. Por favor, tente novamente.'
      }
    };

    const t = texts[lang as keyof typeof texts];

    function checkFormValidity() {
      const isRadioSelected = Array.from(radioButtons).some(radio => radio.checked);
      const isNameFilled = nameInput.value.trim().length > 0;
      const isPhoneFilled = phoneInput.value.trim().length > 0;
      const isEmailFilled = emailInput.value.trim().length > 0;
      const isDescriptionFilled = descriptionTextarea.value.trim().length > 0;

      if (isRadioSelected && isNameFilled && isPhoneFilled && isEmailFilled && isDescriptionFilled) {
        submitBtn.disabled = false;
        submitBtn.textContent = t.enabled;
        submitBtn.classList.remove('opacity-50', 'cursor-not-allowed');
      } else {
        submitBtn.disabled = true;
        submitBtn.textContent = t.disabled;
        submitBtn.classList.add('opacity-50', 'cursor-not-allowed');
      }
    }

    // Event listeners para los radio buttons
    radioButtons.forEach(radio => {
      radio.addEventListener('change', checkFormValidity);
    });

    // Event listeners para los campos de texto
    nameInput.addEventListener('input', checkFormValidity);
    phoneInput.addEventListener('input', checkFormValidity);
    emailInput.addEventListener('input', checkFormValidity);
    descriptionTextarea.addEventListener('input', checkFormValidity);

    // Manejar el submit del formulario
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const selectedRadio = Array.from(radioButtons).find(radio => radio.checked) as HTMLInputElement;
      if (!selectedRadio) return;

      const formData = {
        advisoryType: selectedRadio.value,
        name: nameInput.value.trim(),
        phone: phoneInput.value.trim(),
        email: emailInput.value.trim(),
        description: descriptionTextarea.value.trim(),
        timestamp: new Date().toISOString(),
        language: lang
      };

      // Cambiar el estado del bot√≥n
      submitBtn.disabled = true;
      submitBtn.textContent = t.sending;

      try {
        const response = await fetch('https://api.darwinyusef.com/api/send-email', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            name: formData.name,
            email: formData.email,
            message: `Tipo de asesor√≠a: ${formData.advisoryType}\n\nTel√©fono: ${formData.phone}\n\nDescripci√≥n:\n${formData.description}`
          })
        });

        const result = await response.json();

        if (!result.success) {
          throw new Error(result.error || 'Error al enviar el formulario');
        }

        // Mostrar mensaje de √©xito
        const successMessage = document.createElement('div');
        successMessage.className = 'fixed top-4 right-4 bg-green-500  px-6 py-4 rounded-xl shadow-lg z-50 animate-fade-in';
        successMessage.textContent = t.success;
        document.body.appendChild(successMessage);

        // Resetear el formulario
        form.reset();
        checkFormValidity();

        // Remover el mensaje despu√©s de 5 segundos
        setTimeout(() => {
          successMessage.remove();
        }, 5000);

      } catch (error) {
        console.error('Error submitting form:', error);

        // Mostrar mensaje de error
        const errorMessage = document.createElement('div');
        errorMessage.className = 'fixed top-4 right-4 bg-red-500  px-6 py-4 rounded-xl shadow-lg z-50 animate-fade-in';
        errorMessage.textContent = t.error;
        document.body.appendChild(errorMessage);

        // Remover el mensaje despu√©s de 5 segundos
        setTimeout(() => {
          errorMessage.remove();
        }, 5000);

        // Restaurar el bot√≥n
        submitBtn.disabled = false;
        submitBtn.textContent = t.enabled;
      }
    });

    // Check inicial
    checkFormValidity();
  });
</script>

