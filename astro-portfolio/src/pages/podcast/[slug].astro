---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
  const podcasts = await getCollection("podcasts");
  return podcasts.map((podcast) => ({
    params: { slug: podcast.slug },
    props: { podcast },
  }));
}

const { podcast } = Astro.props;
const { Content } = await podcast.render();
---

<Layout title={podcast.data.title}>
  <div class="min-h-screen">
    <Header />

    <main class="px-6 pb-8 max-w-4xl mx-auto">
      <!-- Back button y título -->
      <div class="flex items-center mb-8 mt-4">
        <a
          href={`/${lang === "es" ? "" : lang}podcast`}
          class="text-gray-900 dark:text-white hover:text-primary"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            height="24"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            viewBox="0 0 24 24"
            width="24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M15 18l-6-6 6-6"></path>
          </svg>
        </a>
        <h1 class="flex-1 text-center text-2xl font-bold pr-6">
          {podcast.data.title}
        </h1>
      </div>

      <!-- Contenedor del podcast -->
      <div class="rounded-lg bg-white dark:bg-[#1a1a2e] shadow-sm overflow-hidden">
        <!-- Cover Image -->
        {
          podcast.data.coverImage && (
            <div class="w-full h-64 md:h-96 overflow-hidden">
              <img
                src={podcast.data.coverImage}
                alt={podcast.data.title}
                class="w-full h-full object-cover"
              />
            </div>
          )
        }

        <!-- Info del podcast -->
        <div class="p-6 md:p-8">
          <!-- Metadata -->
          <div class="flex items-center gap-4 mb-6 text-sm text-gray-600 dark:text-gray-400">
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-lg">schedule</span>
              <span>{podcast.data.duration}</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-lg">calendar_today</span>
              <span>{podcast.data.pubDate.toLocaleDateString(lang, { year: 'numeric', month: 'long', day: 'numeric' })}</span>
            </div>
          </div>

          <!-- Reproductor de audio -->
          <div class="mb-8 p-6 rounded-lg bg-gray-50 dark:bg-gray-800/50">
            <audio
              id="main-audio"
              controls
              class="w-full"
              preload="metadata"
            >
              <source src={podcast.data.audioUrl} type="audio/mpeg" />
              Tu navegador no soporta el elemento de audio.
            </audio>
          </div>

          <!-- Tags -->
          {
            podcast.data.tags && podcast.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-6">
                {podcast.data.tags.map((tag) => (
                  <span class="px-3 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary">
                    #{tag}
                  </span>
                ))}
              </div>
            )
          }

          <!-- Descripción breve -->
          <p class="text-lg text-gray-700 dark:text-gray-300 mb-6 leading-relaxed">
            {podcast.data.description}
          </p>

          <!-- Contenido Markdown -->
          <div class="markdown-content">
            <Content />
          </div>
        </div>
      </div>

      <!-- Navegación a otros episodios (opcional) -->
      <div class="mt-8 text-center">
        <a
          href={`/${lang === "es" ? "" : lang}podcast`}
          class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-primary text-white hover:opacity-90 transition-opacity"
        >
          <span class="material-symbols-outlined">arrow_back</span>
          <span>Ver todos los episodios</span>
        </a>
      </div>
    </main>
  </div>
</Layout>

<style>
  /* Estilos para el contenido markdown */
  .markdown-content {
    color: #374151;
    line-height: 1.75;
  }

  :global(.dark) .markdown-content {
    color: #d1d5db;
  }

  .markdown-content :global(h2) {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #111827;
  }

  :global(.dark) .markdown-content :global(h2) {
    color: #f9fafb;
  }

  .markdown-content :global(h3) {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: #111827;
  }

  :global(.dark) .markdown-content :global(h3) {
    color: #f9fafb;
  }

  .markdown-content :global(h4) {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    color: #111827;
  }

  :global(.dark) .markdown-content :global(h4) {
    color: #f9fafb;
  }

  .markdown-content :global(p) {
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .markdown-content :global(ul),
  .markdown-content :global(ol) {
    margin-top: 1rem;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .markdown-content :global(li) {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .markdown-content :global(ul) {
    list-style-type: disc;
  }

  .markdown-content :global(ol) {
    list-style-type: decimal;
  }

  .markdown-content :global(a) {
    color: #3b82f6;
    text-decoration: underline;
  }

  .markdown-content :global(a:hover) {
    opacity: 0.8;
  }

  .markdown-content :global(strong) {
    font-weight: 700;
    color: #111827;
  }

  :global(.dark) .markdown-content :global(strong) {
    color: #f9fafb;
  }

  .markdown-content :global(code) {
    background-color: #f3f4f6;
    color: #3b82f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: monospace;
  }

  :global(.dark) .markdown-content :global(code) {
    background-color: #1f2937;
  }

  .markdown-content :global(pre) {
    background-color: #f3f4f6;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  :global(.dark) .markdown-content :global(pre) {
    background-color: #1f2937;
  }

  .markdown-content :global(pre code) {
    background-color: transparent;
    padding: 0;
  }

  .markdown-content :global(blockquote) {
    border-left: 4px solid #3b82f6;
    padding-left: 1rem;
    font-style: italic;
    margin-top: 1rem;
    margin-bottom: 1rem;
    color: #6b7280;
  }

  :global(.dark) .markdown-content :global(blockquote) {
    color: #9ca3af;
  }

  .markdown-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .markdown-content :global(th),
  .markdown-content :global(td) {
    border: 1px solid #e5e7eb;
    padding: 0.5rem;
    text-align: left;
  }

  :global(.dark) .markdown-content :global(th),
  :global(.dark) .markdown-content :global(td) {
    border-color: #374151;
  }

  .markdown-content :global(th) {
    background-color: #f3f4f6;
    font-weight: 600;
  }

  :global(.dark) .markdown-content :global(th) {
    background-color: #1f2937;
  }

  .markdown-content :global(hr) {
    border: none;
    border-top: 1px solid #e5e7eb;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  :global(.dark) .markdown-content :global(hr) {
    border-color: #374151;
  }
</style>

<script>
  // Script para mejorar la experiencia del reproductor
  document.addEventListener("DOMContentLoaded", () => {
    const audio = document.getElementById("main-audio") as HTMLAudioElement;

    if (audio) {
      // Guardar el tiempo de reproducción en localStorage
      const podcastSlug = window.location.pathname.split('/').pop();
      const storageKey = `podcast-time-${podcastSlug}`;

      // Restaurar el tiempo guardado
      const savedTime = localStorage.getItem(storageKey);
      if (savedTime) {
        audio.currentTime = parseFloat(savedTime);
      }

      // Guardar el tiempo cada 5 segundos
      let saveInterval: number;
      audio.addEventListener("play", () => {
        saveInterval = setInterval(() => {
          localStorage.setItem(storageKey, audio.currentTime.toString());
        }, 5000);
      });

      audio.addEventListener("pause", () => {
        clearInterval(saveInterval);
        localStorage.setItem(storageKey, audio.currentTime.toString());
      });

      // Limpiar cuando termine
      audio.addEventListener("ended", () => {
        localStorage.removeItem(storageKey);
      });
    }
  });
</script>
