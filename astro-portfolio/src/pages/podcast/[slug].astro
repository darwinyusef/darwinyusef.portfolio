---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import { getCollection } from "astro:content";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
  const podcasts = await getCollection("podcasts");
  return podcasts.map((podcast) => ({
    params: { slug: podcast.slug },
    props: { podcast },
  }));
}

const { podcast } = Astro.props;
const { Content } = await podcast.render();
---

<Layout title={podcast.data.title}>
  <div class="min-h-screen bg-[#0a0a0a]">
    <Header />

    <main class="relative">
      <!-- Hero Section with Cover Image -->
      <section class="relative h-[50vh] md:h-[60vh] overflow-hidden">
        {podcast.data.coverImage ? (
          <img
            src={podcast.data.coverImage}
            alt={podcast.data.title}
            class="w-full h-full object-cover"
          />
        ) : (
          <div class="w-full h-full bg-gradient-to-br from-pink-600 via-primary to-purple-600"></div>
        )}

        <!-- Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-t from-[#F8F8F8] dark:from-[#0a0a0a] via-transparent to-transparent"></div>

        <!-- Back Button -->
        <a
          href={`/${lang === "es" ? "" : lang}podcast`}
          class="absolute top-8 left-4 md:left-8 z-10 flex items-center gap-2 px-4 py-2 bg-white/90 dark:bg-black/90 backdrop-blur-sm rounded-full text-sm font-medium  hover:hover:bg-black transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Volver
        </a>

        <!-- Episode Badge -->
        <div class="absolute top-8 right-4 md:right-8 flex gap-2">
          <span class="px-3 py-1 bg-gradient-to-r from-pink-600 to-primary  text-xs font-bold rounded-full shadow-lg backdrop-blur-sm">
            üéôÔ∏è PODCAST
          </span>
        </div>
      </section>

      <!-- Article Content -->
      <article class="max-w-4xl mx-auto px-6 -mt-32 relative z-10">
        <!-- Title Card -->
        <div class="bg-[#1a1a1a] rounded-2xl  p-8 md:p-12 mb-8 border border-gray-800 transform transition-all duration-500 hover:shadow-3xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold  mb-6 leading-tight" style="font-family: 'Inter Tight', system-ui, sans-serif;">
            {podcast.data.title}
          </h1>

          <!-- Metadata -->
          <div class="flex flex-wrap items-center gap-4 md:gap-6 text-sm text-gray-400 mb-6 pb-6 border-b border-gray-700">
            <div class="flex items-center gap-2">
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-pink-600 to-primary flex items-center justify-center ">
                <span class="material-symbols-outlined text-white text-lg">mic</span>
              </div>
              <span class="font-medium ">Episodio</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-white text-lg">schedule</span>
              <span>{podcast.data.duration}</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="material-symbols-outlined text-white text-lg">calendar_today</span>
              <span>{podcast.data.pubDate.toLocaleDateString(lang, { year: 'numeric', month: 'long', day: 'numeric' })}</span>
            </div>
          </div>

          <!-- Tags -->
          {podcast.data.tags && podcast.data.tags.length > 0 && (
            <div class="flex flex-wrap gap-2">
              {podcast.data.tags.map((tag) => (
                <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-300 text-xs font-medium rounded-full hover:bg-gradient-to-r hover:from-pink-600 hover:to-primary transition-all duration-300 cursor-pointer">
