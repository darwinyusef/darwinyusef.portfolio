---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<Layout title={lang === 'es' ? 'Videos' : lang === 'en' ? 'Videos' : 'Vídeos'}>
  <div class="min-h-screen bg-[#F8F8F8] dark:bg-[#0a0a0a]">
    <Header />

    <main class="overflow-hidden px-5">
      <!-- Hero Section con Ultra Large Text -->
      <section class="relative min-h-[70vh] flex items-center justify-center py-20">
        <div class="max-w-[1800px] mx-auto w-full">
          <div class="text-center">
            <h1 class="text-[clamp(3rem,12vw,12rem)] font-black leading-[0.9] tracking-tighter text-gray-900 dark:text-white mb-8" style="font-family: 'Inter Tight', system-ui, sans-serif;">
              {lang === 'es' ? 'MIS' : lang === 'en' ? 'MY' : 'MEUS'}
              <br />
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary via-purple-600 to-pink-600">
                {lang === 'es' ? 'VIDEOS' : lang === 'en' ? 'VIDEOS' : 'VÍDEOS'}
              </span>
            </h1>
            <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto leading-relaxed" style="font-family: 'Inter Tight', system-ui, sans-serif;">
              {lang === 'es'
                ? 'Contenido educativo y tutoriales sobre desarrollo web y tecnología.'
                : lang === 'en'
                ? 'Educational content and tutorials about web development and technology.'
                : 'Conteúdo educacional e tutoriais sobre desenvolvimento web e tecnologia.'}
            </p>
          </div>
        </div>
      </section>

      <section class="pb-16 max-w-7xl mx-auto">

      <!-- Filtro de categorías -->
      <div class="mb-8">
        <div class="flex flex-wrap gap-2 justify-center" id="category-filters">
          <button
            class="category-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-all duration-300 bg-primary text-white shadow-sm"
            data-category="all"
          >
            {lang === 'es' ? 'Todos' : lang === 'en' ? 'All' : 'Todos'} <span class="category-count ml-1 text-xs opacity-90"></span>
          </button>
        </div>
      </div>

      <div id="videos-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="col-span-full text-center py-8">
          <p class="text-gray-600 dark:text-gray-400">Cargando videos...</p>
        </div>
      </div>
      </section>
    </main>
  </div>

  <div id="video-modal" class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 hidden flex items-center justify-center p-4">
    <div class="bg-white dark:bg-[#1a1a2e] rounded-lg w-full max-w-4xl">
      <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700">
        <h3 id="modal-title" class="font-bold text-gray-900 dark:text-white"></h3>
        <button id="close-modal-btn" class="text-gray-500 hover:text-gray-700 dark:hover:text-gray-300">
          <span class="material-symbols-outlined">close</span>
        </button>
      </div>
      <div class="p-4">
        <div id="video-player" class="aspect-video bg-black rounded-lg overflow-hidden"></div>
        <p id="modal-description" class="mt-4 text-sm text-gray-600 dark:text-gray-400"></p>
      </div>
    </div>
  </div>
</Layout>

<script>
  interface Video {
    id: number;
    title: string;
    description: string;
    youtube_url: string;
    thumbnail?: string;
    duration?: string;
    category?: string;
    tags?: string[];
    pubDate: string;
    is_active: boolean;
  }

  let allVideos: Video[] = [];
  let currentCategory = 'all';

  function getYouTubeVideoId(url: string): string | null {
    const patterns = [
      /(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&\s]+)/,
      /youtube\.com\/embed\/([^&\s]+)/
    ];

    for (const pattern of patterns) {
      const match = url.match(pattern);
      if (match) return match[1];
    }
    return null;
  }

  function getYouTubeThumbnail(url: string): string {
    const videoId = getYouTubeVideoId(url);
    return videoId ? `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg` : '';
  }

  function createCategoryFilters(videos: Video[]) {
    const categoriesMap = new Map<string, number>();

    // Contar videos por categoría
    videos.forEach(video => {
      const category = video.category || 'Sin categoría';
      categoriesMap.set(category, (categoriesMap.get(category) || 0) + 1);
    });

    const filtersContainer = document.getElementById('category-filters');
    if (!filtersContainer) return;

    // Botón "Todos"
    const allBtn = filtersContainer.querySelector('[data-category="all"]');
    if (allBtn) {
      const countSpan = allBtn.querySelector('.category-count');
      if (countSpan) countSpan.textContent = `(${videos.length})`;
    }

    // Crear botones de categorías
    const categoryButtons = Array.from(categoriesMap.entries())
      .sort((a, b) => a[0].localeCompare(b[0]))
      .map(([category, count]) => {
        return `
          <button
            class="category-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-all duration-300 bg-slate-200 dark:bg-slate-700 text-slate-700 dark:text-slate-300 hover:bg-primary hover:text-white shadow-sm"
            data-category="${category}"
          >
            ${category} <span class="ml-1 text-xs opacity-75">(${count})</span>
          </button>
        `;
      }).join('');

    // Agregar los botones después del botón "Todos"
    if (allBtn) {
      allBtn.insertAdjacentHTML('afterend', categoryButtons);
    }

    // Agregar event listeners
    document.querySelectorAll('.category-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const category = btn.getAttribute('data-category');
        filterByCategory(category || 'all');
      });
    });
  }

  function filterByCategory(category: string) {
    currentCategory = category;

    // Actualizar estilos de botones
    document.querySelectorAll('.category-btn').forEach(btn => {
      if (btn.getAttribute('data-category') === category) {
        btn.className = 'category-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-all duration-300 bg-primary text-white shadow-sm';
      } else {
        btn.className = 'category-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-all duration-300 bg-slate-200 dark:bg-slate-700 text-slate-700 dark:text-slate-300 hover:bg-primary hover:text-white shadow-sm';
      }
    });

    // Filtrar videos
    const filteredVideos = category === 'all'
      ? allVideos
      : allVideos.filter(v => v.category === category);

    renderVideos(filteredVideos);
  }

  function renderVideos(videos: Video[]) {
    const container = document.getElementById('videos-container');
    if (!container) return;

    if (videos.length === 0) {
      container.innerHTML = `
        <div class="col-span-full text-center py-12">
          <p class="text-gray-600 dark:text-gray-400 text-lg">No hay videos en esta categoría.</p>
        </div>
      `;
      return;
    }

    const html = videos.map(video => {
      const thumbnail = video.thumbnail || getYouTubeThumbnail(video.youtube_url);

      return `
        <div class="bg-white dark:bg-[#1a1a2e] rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 cursor-pointer video-card border border-slate-200 dark:border-slate-700"
             data-video='${JSON.stringify(video).replace(/'/g, "&apos;")}'>
          <div class="relative group">
            <img src="${thumbnail}" alt="${video.title}" class="w-full h-48 object-cover" />
            <div class="absolute inset-0 bg-black/40 group-hover:bg-black/60 transition-colors flex items-center justify-center">
              <div class="w-16 h-16 rounded-full bg-gradient-to-r from-red-600 to-red-700 flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform">
                <span class="material-symbols-outlined text-white text-4xl">play_arrow</span>
              </div>
            </div>
            ${video.duration ? `
              <div class="absolute bottom-2 right-2 bg-black/90 text-white text-xs font-semibold px-2 py-1 rounded">
                ${video.duration}
              </div>
            ` : ''}
            ${video.category ? `
              <div class="absolute top-2 left-2 bg-primary text-white text-xs font-bold px-3 py-1 rounded-full">
                ${video.category}
              </div>
            ` : ''}
          </div>
          <div class="p-5">
            <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-2 line-clamp-2 hover:text-primary transition-colors">${video.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-3 mb-3">${video.description}</p>
            ${video.tags && video.tags.length > 0 ? `
              <div class="flex flex-wrap gap-2">
                ${video.tags.slice(0, 3).map(tag => `
                  <span class="text-xs bg-slate-100 dark:bg-slate-800 text-slate-700 dark:text-slate-300 px-2 py-1 rounded-md">
                    ${tag}
                  </span>
                `).join('')}
              </div>
            ` : ''}
          </div>
        </div>
      `;
    }).join('');

    container.innerHTML = html;

    // Agregar event listeners a las cards
    document.querySelectorAll('.video-card').forEach(card => {
      card.addEventListener('click', () => {
        const videoData = JSON.parse(card.getAttribute('data-video') || '{}');
        openVideoModal(videoData);
      });
    });
  }

  function openVideoModal(video: Video) {
    const modal = document.getElementById('video-modal');
    const modalTitle = document.getElementById('modal-title');
    const modalDescription = document.getElementById('modal-description');
    const videoPlayer = document.getElementById('video-player');

    if (!modal || !modalTitle || !modalDescription || !videoPlayer) return;

    const videoId = getYouTubeVideoId(video.youtube_url);
    if (!videoId) return;

    modalTitle.textContent = video.title;
    modalDescription.textContent = video.description;
    videoPlayer.innerHTML = `
      <iframe
        width="100%"
        height="100%"
        src="https://www.youtube.com/embed/${videoId}?autoplay=1"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    `;

    modal.classList.remove('hidden');
  }

  function closeVideoModal() {
    const modal = document.getElementById('video-modal');
    const videoPlayer = document.getElementById('video-player');

    if (!modal || !videoPlayer) return;

    modal.classList.add('hidden');
    videoPlayer.innerHTML = '';
  }

  async function loadVideos() {
    const container = document.getElementById('videos-container');
    if (!container) return;

    try {
      // Cargar desde JSON local
      const response = await fetch('/videos.json');

      if (!response.ok) throw new Error('Failed to load videos');

      const loadedVideos: Video[] = await response.json();
      allVideos = loadedVideos.filter(v => v.is_active);

      if (allVideos.length === 0) {
        container.innerHTML = `
          <div class="col-span-full text-center py-8">
            <p class="text-gray-600 dark:text-gray-400">No hay videos disponibles en este momento.</p>
          </div>
        `;
        return;
      }

      // Crear filtros de categorías
      createCategoryFilters(allVideos);

      // Renderizar todos los videos inicialmente
      renderVideos(allVideos);

    } catch (error) {
      console.error('Error loading videos:', error);
      container.innerHTML = `
        <div class="col-span-full text-center py-8">
          <p class="text-red-500 dark:text-red-400">Error al cargar videos.</p>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">Por favor, intenta de nuevo más tarde.</p>
        </div>
      `;
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    loadVideos();

    const closeModalBtn = document.getElementById('close-modal-btn');
    const modal = document.getElementById('video-modal');

    closeModalBtn?.addEventListener('click', closeVideoModal);

    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeVideoModal();
      }
    });
  });
</script>
