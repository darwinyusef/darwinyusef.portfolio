---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<Layout title={lang === 'es' ? 'Página no encontrada' : lang === 'en' ? 'Page not found' : 'Página não encontrada'}>
  <div class="min-h-screen flex flex-col">
    <Header />

    <main class="flex-1 flex items-center justify-center px-4">
      <div class="text-center max-w-md">
        <div class="mb-8">
          <div class="inline-block p-6 bg-primary/10 dark:bg-primary/20 rounded-full">
            <span class="material-symbols-outlined text-whitetext-primary" style="font-size: 80px;">error_outline</span>
          </div>
        </div>

        <h1 class="text-6xl font-black  mb-4">404</h1>

        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-4">
          {lang === 'es' ? 'Página no encontrada' : lang === 'en' ? 'Page not found' : 'Página não encontrada'}
        </h2>

        <p class="text-gray-400 mb-8">
          {lang === 'es'
            ? 'Lo sentimos, la página que buscas no existe o ha sido movida.'
            : lang === 'en'
            ? 'Sorry, the page you\'re looking for doesn\'t exist or has been moved.'
            : 'Desculpe, a página que você está procurando não existe ou foi movida.'}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={`/${lang === 'es' ? '' : lang}`}
            class="inline-flex items-center justify-center gap-2 bg-primary  font-bold py-3 px-6 rounded-lg hover:opacity-90 transition-opacity"
          >
            <span class="material-symbols-outlined">home</span>
            {lang === 'es' ? 'Volver al Inicio' : lang === 'en' ? 'Go to Home' : 'Voltar ao Início'}
          </a>

          <button
            onclick="history.back()"
            class="inline-flex items-center justify-center gap-2 border border-gray-300 dark:border-gray-600 text-gray-300 font-bold py-3 px-6 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
          >
            <span class="material-symbols-outlined">arrow_back</span>
            {lang === 'es' ? 'Volver Atrás' : lang === 'en' ? 'Go Back' : 'Voltar'}
          </button>
        </div>

        <div class="mt-12">
          <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
            {lang === 'es' ? 'Enlaces útiles:' : lang === 'en' ? 'Useful links:' : 'Links úteis:'}
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm">
            <a href={`/${lang === 'es' ? '' : lang}/services`} class="text-primary hover:underline">
              {lang === 'es' ? 'Servicios' : lang === 'en' ? 'Services' : 'Serviços'}
            </a>
            <a href={`/${lang === 'es' ? '' : lang}/skills`} class="text-primary hover:underline">
              {lang === 'es' ? 'Habilidades' : lang === 'en' ? 'Skills' : 'Habilidades'}
            </a>
            <a href={`/${lang === 'es' ? '' : lang}/podcast`} class="text-primary hover:underline">
              Podcast
            </a>
            <a href={`/${lang === 'es' ? '' : lang}/#contact`} class="text-primary hover:underline">
              {lang === 'es' ? 'Contacto' : lang === 'en' ? 'Contact' : 'Contato'}
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
