<script>
  // Toggle functionality for tech categories
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButtons = document.querySelectorAll('.tech-category-toggle');

    toggleButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const category = button.closest('.tech-category');
        const content = category?.querySelector('.tech-content');
        const chevron = button.querySelector('.chevron-icon');

        if (content && chevron) {
          // Toggle content visibility
          if (content.style.maxHeight && content.style.maxHeight !== '0px') {
            // Collapse
            content.style.maxHeight = '0px';
            content.style.opacity = '0';
            content.style.marginTop = '0';
            chevron.style.transform = 'rotate(0deg)';
          } else {
            // Expand
            content.style.maxHeight = content.scrollHeight + 'px';
            content.style.opacity = '1';
            content.style.marginTop = '1.5rem';
            chevron.style.transform = 'rotate(180deg)';
          }
        }
      });
    });

    // Initialize all categories as expanded
    document.querySelectorAll('.tech-content').forEach((content) => {
      if (content instanceof HTMLElement) {
        content.style.maxHeight = content.scrollHeight + 'px';
        content.style.opacity = '1';
        content.style.transition = 'all 0.3s ease';
      }
    });
  });
</script>

