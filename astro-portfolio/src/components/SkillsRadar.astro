  const categoryColors = {
    'Liderazgo': { from: '#3b82f6', to: '#1d4ed8', bg: 'from-blue-500 to-blue-700' },
    'Pensamiento': { from: '#10b981', to: '#059669', bg: 'from-emerald-500 to-emerald-700' },
    'Comunicaci√≥n': { from: '#8b5cf6', to: '#6d28d9', bg: 'from-violet-500 to-violet-700' },
    'Estrategia': { from: '#f59e0b', to: '#d97706', bg: 'from-amber-500 to-amber-700' },
    'Emocional': { from: '#ec4899', to: '#db2777', bg: 'from-pink-500 to-pink-700' }
  };

  function createRadarChart(skills: Skill[]) {
    const canvas = document.getElementById('skills-radar-chart') as HTMLCanvasElement;
    const container = document.getElementById('radar-container');
    const loading = document.getElementById('radar-loading');

    if (!canvas || !container || !loading) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    // Set canvas size - MUCHO M√ÅS GRANDE para darle protagonismo
    const containerWidth = canvas.parentElement?.clientWidth || 700;
    const size = Math.min(700, containerWidth);
    canvas.width = size;
    canvas.height = size;

    const centerX = size / 2;
    const centerY = size / 2;
    const maxRadius = size / 2 - 120; // M√°s margen para labels

    // Get top skills - mantener orden original
    const topSkills = skills.slice(0, 10);

    const numSkills = topSkills.length;
    const angleStep = (Math.PI * 2) / numSkills;

    // Check if dark mode
    const isDark = document.documentElement.classList.contains('dark');
    const gridColor = isDark ? 'rgba(255, 255, 255, 0.1)' : 'rgba(0, 0, 0, 0.1)';
    const textColor = isDark ? '#fff' : '#1f2937';

    // Draw grid circles with better styling
    for (let i = 1; i <= 5; i++) {
      ctx.strokeStyle = gridColor;
      ctx.lineWidth = i === 5 ? 3 : 1.5;
      ctx.beginPath();
      ctx.arc(centerX, centerY, (maxRadius / 5) * i, 0, Math.PI * 2);
      ctx.stroke();

      // Draw percentage labels on each circle
      if (i % 1 === 0) {
        const percentage = (i * 20);
        ctx.fillStyle = isDark ? 'rgba(255, 255, 255, 0.4)' : 'rgba(0, 0, 0, 0.4)';
        ctx.font = 'bold 12px Inter Tight, sans-serif';
        ctx.textAlign = 'center';
        ctx.fillText(`${percentage}%`, centerX, centerY - (maxRadius / 5) * i - 8);
      }
    }

    // Draw axes and collect points
    const skillPoints: { x: number; y: number; skill: Skill }[] = [];

    topSkills.forEach((skill, index) => {
      const angle = angleStep * index - Math.PI / 2;

      // Draw axis line with better styling
      ctx.strokeStyle = gridColor;
      ctx.lineWidth = 1.5;
      ctx.beginPath();
      ctx.moveTo(centerX, centerY);
      const axisX = centerX + Math.cos(angle) * maxRadius;
      const axisY = centerY + Math.sin(angle) * maxRadius;
      ctx.lineTo(axisX, axisY);
      ctx.stroke();

      // Calculate point position
      const radius = (maxRadius * skill.proficiency) / 100;
      const x = centerX + Math.cos(angle) * radius;
      const y = centerY + Math.sin(angle) * radius;
      skillPoints.push({ x, y, skill });

      // Draw label with better positioning and styling
      const labelDistance = maxRadius + 50;
      const labelX = centerX + Math.cos(angle) * labelDistance;
      const labelY = centerY + Math.sin(angle) * labelDistance;

      // Get color for this skill
      const color = categoryColors[skill.category as keyof typeof categoryColors];

      // Skill name with shadow for better readability
      ctx.textAlign = labelX < centerX - 10 ? 'right' : labelX > centerX + 10 ? 'left' : 'center';
      ctx.textBaseline = 'middle';
      ctx.font = 'bold 16px Inter Tight, sans-serif';

      // Shadow for text
      ctx.shadowColor = isDark ? 'rgba(0, 0, 0, 0.8)' : 'rgba(255, 255, 255, 0.8)';
      ctx.shadowBlur = 8;
      ctx.shadowOffsetX = 0;
      ctx.shadowOffsetY = 0;

      // Draw skill name with category color
      if (color) {
        ctx.fillStyle = color.from;
      } else {
        ctx.fillStyle = textColor;
      }
      ctx.fillText(skill.name, labelX, labelY);

      // Reset shadow
      ctx.shadowBlur = 0;

      // Percentage below name
      ctx.font = 'bold 13px Inter Tight, sans-serif';
      ctx.fillStyle = isDark ? 'rgba(255, 255, 255, 0.7)' : 'rgba(0, 0, 0, 0.7)';
      ctx.fillText(`${skill.proficiency}%`, labelX, labelY + 18);
    });

    // Draw skill polygon with gradient
    if (skillPoints.length > 0) {
      // Create gradient for fill
      const gradient = ctx.createLinearGradient(0, 0, size, size);
      gradient.addColorStop(0, 'rgba(59, 130, 246, 0.4)');
      gradient.addColorStop(0.5, 'rgba(139, 92, 246, 0.4)');
      gradient.addColorStop(1, 'rgba(236, 72, 153, 0.4)');

      // Fill
      ctx.fillStyle = gradient;
      ctx.beginPath();
      ctx.moveTo(skillPoints[0].x, skillPoints[0].y);
      for (let i = 1; i < skillPoints.length; i++) {
        ctx.lineTo(skillPoints[i].x, skillPoints[i].y);
      }
      ctx.closePath();
      ctx.fill();

      // Stroke with gradient
      const strokeGradient = ctx.createLinearGradient(0, 0, size, size);
      strokeGradient.addColorStop(0, '#3b82f6');
      strokeGradient.addColorStop(0.5, '#8b5cf6');
      strokeGradient.addColorStop(1, '#ec4899');

      ctx.strokeStyle = strokeGradient;
      ctx.lineWidth = 4;
      ctx.stroke();

      // Draw points with glow effect
      skillPoints.forEach(({ x, y, skill }) => {
        const color = categoryColors[skill.category as keyof typeof categoryColors];

        if (color) {
          // Outer glow
          const glowGradient = ctx.createRadialGradient(x, y, 0, x, y, 16);
          glowGradient.addColorStop(0, color.from + 'AA');
          glowGradient.addColorStop(1, color.from + '00');
          ctx.fillStyle = glowGradient;
          ctx.beginPath();
          ctx.arc(x, y, 16, 0, Math.PI * 2);
          ctx.fill();

          // Inner point
          ctx.fillStyle = color.from;
          ctx.beginPath();
          ctx.arc(x, y, 8, 0, Math.PI * 2);
          ctx.fill();

          // White border
          ctx.strokeStyle = isDark ? '#1a1a1a' : '#fff';
          ctx.lineWidth = 3;
          ctx.stroke();
        }
      });
    }

    // Show chart, hide loading
    container.classList.remove('hidden');
    loading.classList.add('hidden');
  }

